<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arr_back"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        app:layout_constraintLeft_toRightOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/forgot_screen_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Select which contact details should  we use to reset your password"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDef1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@id/cardDef2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@id/cardDef1"
        app:layout_constraintEnd_toEndOf="@id/cardDef1"
        app:layout_constraintStart_toStartOf="@id/cardDef1"
        app:layout_constraintTop_toTopOf="@id/cardDef1" />

    <ImageView
        android:id="@+id/cardImage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:src="@drawable/forgot_screen_sms"
        app:layout_constraintBottom_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="@id/card1"
        app:layout_constraintTop_toTopOf="@id/card1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        android:text="via SMS:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/cardImage1"
        app:layout_constraintStart_toEndOf="@id/cardImage1"
        app:layout_constraintTop_toTopOf="@id/cardImage1"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        tools:text="+998*****07"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cardImage1"
        app:layout_constraintStart_toEndOf="@id/cardImage1"
        app:layout_constraintTop_toTopOf="@id/cardImage1"
        app:layout_constraintVertical_bias="0.7" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDef2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@id/continueBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="@id/cardDef2"
        app:layout_constraintEnd_toEndOf="@id/cardDef2"
        app:layout_constraintStart_toStartOf="@id/cardDef2"
        app:layout_constraintTop_toTopOf="@id/cardDef2" />

    <ImageView
        android:id="@+id/cardImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:elevation="10dp"
        android:src="@drawable/forgot_screen_email"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        android:text="via Email:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/cardImage2"
        app:layout_constraintStart_toEndOf="@id/cardImage1"
        app:layout_constraintTop_toTopOf="@id/cardImage2"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        tools:text="and***ley@yourdomain.com"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cardImage2"
        app:layout_constraintStart_toEndOf="@id/cardImage2"
        app:layout_constraintTop_toTopOf="@id/cardImage2"
        app:layout_constraintVertical_bias="0.7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/buttom_splash"
        android:text="Continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDef2" />

</androidx.constraintlayout.widget.ConstraintLayout>